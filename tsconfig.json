{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "es2016",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7",
            "ES2020.String"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}
